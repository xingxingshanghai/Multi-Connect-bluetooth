<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/darker_gray">

    <View
        android:id="@+id/music_list_selected"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/music_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/music_list_selected"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/lanya" />

    <TextView
        android:id="@+id/txtMac1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/music_list_icon"
        android:singleLine="true"
        android:text="蓝牙设备"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMac1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/music_list_icon"
        android:maxLines="2"
        android:text="艺术家"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="2dp"-->
    <!--android:background="#000000"-->
    <!--android:layout_below="@+id/music_list_icon"-->
    <!--&gt;</View>-->
    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtMac"
        android:layout_alignParentRight="true"
        android:text="未选择"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <!--<CheckBox-->
        <!--android:id="@+id/checkBox"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--/>-->
</RelativeLayout>
